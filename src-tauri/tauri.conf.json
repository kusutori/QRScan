{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "qrscan",
  "version": "0.1.0",
  "identifier": "com.kusut.qrscan",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://192.168.31.132:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "qrscan",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' blob: data: filesystem: ws: wss: http: https: tauri:; media-src 'self' blob: data: mediastream:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}